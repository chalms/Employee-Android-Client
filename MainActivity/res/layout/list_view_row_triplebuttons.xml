<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:background="@color/lightGray"
    android:fadingEdge="horizontal"
    android:fadingEdgeLength="5dp"
    android:padding="15dp" >

    <TextView
        android:id="@+id/textViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/color_selector"
        android:textSize="15sp" />

     <CheckBox
         android:id="@+id/PoorCheckBox"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/NACheckBox"
         android:layout_alignBottom="@+id/NACheckBox"
         android:layout_centerVertical="true"
         android:layout_marginRight="10dp"
         android:layout_toLeftOf="@+id/NACheckBox"
         android:button="@drawable/fail_btn_check"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:saveEnabled="true" />

     <CheckBox
         android:id="@+id/GoodCheckBox"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/PoorCheckBox"
         android:layout_alignBottom="@+id/PoorCheckBox"
         android:layout_marginRight="15dp"
         android:layout_toLeftOf="@+id/PoorCheckBox"
         android:button="@drawable/pass_btn_check"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:saveEnabled="true" />

     <CheckBox
         android:id="@+id/NACheckBox"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignTop="@+id/textViewItem"
         android:layout_marginRight="0dp"
         android:button="@drawable/na_btn_check"
         android:focusable="false"
         android:focusableInTouchMode="false"
         android:saveEnabled="true" />
    
</RelativeLayout>
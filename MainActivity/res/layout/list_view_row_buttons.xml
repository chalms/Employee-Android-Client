<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:background="@color/lightGray"
    android:fadingEdge="horizontal"
    android:fadingEdgeLength="5dp"
    android:padding="15dp" >

    
    <TextView
        android:id="@+id/textViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        
        android:textColor="@drawable/color_selector"
        android:textSize="15sp"
        />
    
    <CheckBox 
        android:id="@+id/FailCheckBox" 
        android:button="@drawable/fail_btn_check"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:saveEnabled="false"
        />

    <CheckBox
        android:id="@+id/PassCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/FailCheckBox"
        android:layout_alignTop="@id/textViewItem"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/FailCheckBox"
        android:button="@drawable/pass_btn_check"
        android:focusable="false"
        android:saveEnabled="true"
        android:focusableInTouchMode="false" />
    
    
</RelativeLayout>